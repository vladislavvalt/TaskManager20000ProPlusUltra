@model IEnumerable<TaskManager20000ProPlusUltra.TaskManagerDatabase.Project>

@{
    ViewBag.Title = "CurrentProjects";
}

<h2>CurrentProjects</h2>

<p>
    @Html.ActionLink("Create New", "CreateProject")
</p>
<table class="table">
    <tr>
        <th>
            Client
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manager.ManagerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>Tasks</th>
        <th>
            Team
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Client.User.FirstName @item.Client.User.LastName
            </td>
            <td>
                @ViewBag.Manager.User.FirstName  @ViewBag.Manager.User.LastName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a href="/Manager/ProjectTasks?projectId=@item.ProjectId">Tasks</a>
            </td>
            <td>
                <a href="/Team/Details/@item.TeamId">Team №@item.TeamId</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.ActionLink("Add Task", "CreateTask", new { projectId = "1" })
            </td>
            <td>
                @if (@item.Status == "OPENED")
                {
                    <a href="/Manager/CloseProject?projectId=@item.ProjectId">Close Project</a>
                }
            </td>
        </tr>
    }

</table>
